{
  "name": "@thesammykins/ptv-api",
  "version": "0.1.0",
  "description": "TypeScript client for the PTV (Public Transport Victoria) Timetable API v3",
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "test:e2e": "vitest run --config vitest.config.e2e.ts",
    "lint": "tsc --noEmit",
    "prepublishOnly": "npm run lint && npm run test:coverage && npm run build"
  },
  "keywords": [
    "ptv",
    "public-transport-victoria",
    "timetable",
    "api-client",
    "melbourne",
    "transport",
    "typescript"
  ],
  "author": "thesammykins",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/thesammykins/ptv-api.git"
  },
  "bugs": {
    "url": "https://github.com/thesammykins/ptv-api/issues"
  },
  "homepage": "https://github.com/thesammykins/ptv-api#readme",
  "engines": {
    "node": ">=20"
  },
  "dependencies": {
    "zod": "^3.24.0"
  },
  "devDependencies": {
    "@types/node": "^25.2.3",
    "@vitest/coverage-v8": "^3.0.0",
    "tsup": "^8.4.0",
    "typescript": "^5.7.0",
    "vitest": "^3.0.0"
  }
}
